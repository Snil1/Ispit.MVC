@{
}

@model IEnumerable<Student>

    <h2>Popis studenta</h2>

<table class="table">
    <thead>
        <th>Šifra studenta</th>
        <th>Ime i prezime</th>
        <th> Starost</th>
        <th>Fakultet</th>
    </thead>
    <tbody>
        @foreach(var stud in Model)
        {
            <tr>
                <td>
                    @stud.Id
                </td>
                <td>
                    @stud.Name
                </td>
                <td>
                    @stud.Age
                </td>
                <td>
                    @stud.Bio
                </td>
                <td>
                    @Html.ActionLink("Detalji","Details", "Student",new { id = stud.Id} ,new { @class="btn btn-primary"})
                </td>
            </tr>
        }
    </tbody>
</table>
